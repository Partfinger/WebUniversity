@Html.ActionLink("Изменить курс", "Edit", "Courses", new { @Model.Id })
<section>
    <div>
        <b>Имя курса:</b>
        <p>@Model.Name</p>
    </div>
    <div>
        <b>Описание курса:</b>
        <p>@Model.Description</p>
    </div>
    @if (Model.Groups != null)
    {
        <table>
            <caption class="captionTable">Список групп по курсу:</caption>
            <tr>
                <td>Группа</td>
            </tr>
            @foreach (Group group in Model.Groups)
            {
                <tr>
                    <td>@Html.ActionLink(@group.Name, "Details", "Groups", new { @group.Id })</td>
                </tr>
            }
        </table>
    }
    else
    {
        <b>Нету групп на данном курсе!</b>
        <form method="post" asp-controller="Courses" asp-action="Delete" asp-route-Id="@Model.Id">
            <input type="submit" value="Удалить курс" />
        </form>
    }
</section>