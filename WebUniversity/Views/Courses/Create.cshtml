@model Course;
<form method="post" asp-antiforgery="true" asp-controller="Courses" asp-action="Create">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label>@Localizer["CourseName"]</label>
            <p><input type="text" asp-for="Name" /></p>
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label>@Localizer["CourseDescription"]</label>
            <p><input type="text" asp-for="Description" /></p>
            <span asp-validation-for="Description"></span>
        </div>
        <div>
            <input type="submit" value="@Localizer["Add"]" />
        </div>
    </div>
</form>
