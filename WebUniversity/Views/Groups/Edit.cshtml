@model Group
<div class="container">
    <form method="post" asp-action="Update" asp-route-Id="@Model.Id">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label col-form-label-sm">@Localizer["NameLabel"]</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm mb-2" asp-for="Name" value="@Model.Name" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CourseId" class="col-sm-2 col-form-label col-form-label-sm">@Localizer["CurrentCourse"]</label>
            <div class="col-sm-10">
                <select asp-for="CourseId" class="form-control">
                    <option value="null">@Localizer["NotAssigned"]</option>
                    @if (!(ViewBag.Courses is null))
                    {
                        @foreach (Course course in ViewBag.Courses)
                        {
                            @if (Model.Course == course)
                            {
                                <option selected="selected" value="@course.Id">@course.Name</option>
                            }
                            else
                            {
                                <option value="@course.Id">@course.Name</option>
                            }

                        }
                    }
                </select>
            </div>
        </div>
        <input type="submit" value="@Localizer["Save"]" />
    </form>
</div>