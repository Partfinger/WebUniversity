@model Student
<section>
    <div>
        @Html.ActionLink(Localizer["Edit"].Value, "Edit", "Students", new { @Model.Id })
    </div>
    <div>
        <b>@Localizer["FirstName"]</b>
        <p>@Model.FirstName</p>
    </div>
    <div>
        <b>@Localizer["LastName"]</b>
        <p>@Model.LastName</p>
    </div>
    <div>
        @if (Model.Group != null)
        {
        <b>@Localizer["Group"]</b>
            <p>@Html.ActionLink(Model.Group.Name, "Details", "Groups", new { Model.Group.Id })</p>
        }
        else
        {
            <p>@Localizer["NoGroup"]</p>
        }
    </div>
    <form method="post" asp-controller="Students" asp-action="Delete" asp-route-Id="@Model.Id">
        <input type="submit" value="@Localizer["Delete"]" />
    </form>
</section>