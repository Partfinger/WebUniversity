@model Student;
<section>
    <form method="post" asp-antiforgery="true" asp-controller="Students" asp-action="Create">
        <div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <label>@Localizer["FirstName"]</label>
                <input type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label>@Localizer["LastName"]</label>
                <input type="text" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <input type="submit" value="@Localizer["Add"]" />
            </div>
        </div>
    </form>
</section>